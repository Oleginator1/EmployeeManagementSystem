@model IEnumerable<EmployeeManagementSystem.Models.ViewModels.UserListViewModel>
@using EmployeeManagementSystem.Constants

@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4">
                <i class="bi bi-people"></i> User Management
            </h1>
        </div>
    </div>

    @* Messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Statistics Cards *@
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6>Total Users</h6>
                            <h2 class="mb-0">@Model.Count()</h2>
                        </div>
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6>Verified</h6>
                            <h2 class="mb-0">@Model.Count(u => u.EmailConfirmed)</h2>
                        </div>
                        <i class="bi bi-check-circle fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6>Locked Out</h6>
                            <h2 class="mb-0">@Model.Count(u => u.IsLockedOut)</h2>
                        </div>
                        <i class="bi bi-lock fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6>Total Failed Logins</h6>
                            <h2 class="mb-0">@Model.Sum(u => u.AccessFailedCount)</h2>
                        </div>
                        <i class="bi bi-exclamation-triangle fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Users Table *@
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Verified</th>
                            <th>Status</th>
                            <th>Failed Logins</th>
                            <th>Last Login</th>
                            <th>Linked Employee</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="@(user.IsLockedOut ? "table-danger" : "")">
                                <td>@user.Email</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-info me-1">@role</span>
                                    }
                                    @if (!user.Roles.Any())
                                    {
                                        <span class="badge bg-secondary">No Role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-triangle"></i> No
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsLockedOut)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-lock"></i> Locked
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-unlock"></i> Active
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.AccessFailedCount > 0)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> @user.AccessFailedCount
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> 0
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.LastLogin.HasValue)
                                    {
                                        <small>@user.LastLogin.Value.ToString("MM/dd/yyyy HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </td>
                                <td>
                                    @if (user.LinkedEmployeeId.HasValue)
                                    {
                                        <a asp-controller="Employees"
                                           asp-action="Details"
                                           asp-route-id="@user.LinkedEmployeeId"
                                           class="text-decoration-none">
                                            <i class="bi bi-person-badge"></i> @user.LinkedEmployeeName
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not linked</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        @* Role Assignment Dropdown *@
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-info dropdown-toggle"
                                                    type="button"
                                                    data-bs-toggle="dropdown">
                                                <i class="bi bi-person-gear"></i> Role
                                            </button>
                                            <ul class="dropdown-menu">
                                                @foreach (var role in new[] { Roles.Admin, Roles.Manager, Roles.Employee })
                                                {
                                                    <li>
                                                        <form asp-action="AssignRole" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="userId" value="@user.UserId" />
                                                            <input type="hidden" name="role" value="@role" />
                                                            <button type="submit"
                                                                    class="dropdown-item @(user.Roles.Contains(role) ? "active" : "")">
                                                                @if (user.Roles.Contains(role))
                                                                {
                                                                    <i class="bi bi-check"></i>
                                                                }
                                                                @role
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                            </ul>
                                        </div>

                                        @* Link Employee *@
                                        <a asp-controller="UserProfile"
                                           asp-action="LinkEmployee"
                                           asp-route-userId="@user.UserId"
                                           class="btn btn-sm btn-warning"
                                           title="Link to Employee">
                                            <i class="bi bi-link-45deg"></i>
                                        </a>

                                        @* Unlock - show if locked OR has failed attempts *@
                                        @if (user.IsLockedOut || user.AccessFailedCount > 0)
                                        {
                                            <form asp-action="UnlockUser"
                                                  method="post"
                                                  style="display:inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                <button type="submit"
                                                        class="btn btn-sm btn-success"
                                                        title="Unlock & Reset Failed Count">
                                                    <i class="bi bi-unlock"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function() { $('.alert').fadeOut('slow'); }, 5000);
    </script>
}