@model EmployeeManagementSystem.Models.Entities.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <strong>Warning:</strong> This will deactivate the employee. The record will be marked as inactive but not permanently deleted.
                    </div>

                    <h5 class="mb-3">Are you sure you want to deactivate this employee?</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Full Name:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Department:</dt>
                        <dd class="col-sm-8">@Model.Department?.Name</dd>

                        <dt class="col-sm-4">Job Title:</dt>
                        <dd class="col-sm-8">@Model.JobTitle?.TitleName</dd>

                        <dt class="col-sm-4">Hire Date:</dt>
                        <dd class="col-sm-8">@Model.HireDate.ToString("MMMM dd, yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="EmployeeId" />
                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-check-circle"></i> Yes, Deactivate
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>