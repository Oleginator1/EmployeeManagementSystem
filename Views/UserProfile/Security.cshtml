@model EmployeeManagementSystem.Models.ViewModels.UserSecurityViewModel

@{
    ViewData["Title"] = "Security Settings";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-shield-check"></i> Security Settings
                    </h3>
                </div>
                <div class="card-body">
                    @* Messages *@
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @* Login Statistics Cards *@
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-bar-chart"></i> Login Statistics
                    </h5>

                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-success text-white text-center">
                                <div class="card-body">
                                    <i class="bi bi-check-circle fs-2"></i>
                                    <h3 class="mt-2">@Model.TotalSuccessfulLogins</h3>
                                    <small>Successful Logins</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white text-center">
                                <div class="card-body">
                                    <i class="bi bi-x-circle fs-2"></i>
                                    <h3 class="mt-2">@Model.TotalFailedAttempts</h3>
                                    <small>Failed Attempts (All Time)</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-dark text-center">
                                <div class="card-body">
                                    <i class="bi bi-exclamation-triangle fs-2"></i>
                                    <h3 class="mt-2">@Model.AccessFailedCount</h3>
                                    <small>Current Failed Count</small>
                                    <br />
                                    <small class="text-muted">(resets on login)</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card @(Model.LockoutEnd.HasValue && Model.LockoutEnd > DateTimeOffset.Now ? "bg-danger" : "bg-secondary") text-white text-center">
                                <div class="card-body">
                                    <i class="bi bi-lock fs-2"></i>
                                    <h3 class="mt-2">
                                        @if (Model.LockoutEnd.HasValue && Model.LockoutEnd > DateTimeOffset.Now)
                                        {
                                            <span>LOCKED</span>
                                        }
                                        else
                                        {
                                            <span>OK</span>
                                        }
                                    </h3>
                                    <small>Account Status</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Last Login Info *@
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-body">
                                    <h6 class="text-success">
                                        <i class="bi bi-check-circle"></i> Last Successful Login
                                    </h6>
                                    @if (Model.LastSuccessfulLogin.HasValue)
                                    {
                                        <strong>@Model.LastSuccessfulLogin.Value.ToString("MMMM dd, yyyy hh:mm tt")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No successful logins recorded yet</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-danger">
                                <div class="card-body">
                                    <h6 class="text-danger">
                                        <i class="bi bi-x-circle"></i> Last Failed Login
                                    </h6>
                                    @if (Model.LastFailedLogin.HasValue)
                                    {
                                        <strong>@Model.LastFailedLogin.Value.ToString("MMMM dd, yyyy hh:mm tt")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No failed logins recorded</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Security Settings *@
                    @* Security Settings *@
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-shield"></i> Security Settings
                    </h5>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <h6 class="card-title mb-2">
                                                <i class="bi bi-key"></i> Password Management
                                            </h6>
                                            <p class="text-muted small mb-0">
                                                Regular password changes help keep your account secure.
                                                Use a strong password with uppercase, lowercase, numbers, and special characters.
                                            </p>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <a asp-action="ChangePassword" class="btn btn-outline-warning">
                                                <i class="bi bi-key"></i> Change Password
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Account Status *@
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-info-circle"></i> Account Status
                    </h5>

                    <dl class="row mb-4">
                        <dt class="col-sm-4">Email Verified:</dt>
                        <dd class="col-sm-8">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Yes
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-exclamation-triangle"></i> No
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">Lockout Tracking:</dt>
                        <dd class="col-sm-8">
                            @if (Model.LockoutEnabled)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Enabled
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle"></i> Disabled
                                </span>
                            }
                        </dd>

                        @if (Model.LockoutEnd.HasValue && Model.LockoutEnd > DateTimeOffset.Now)
                        {
                            <dt class="col-sm-4">Locked Until:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-danger">
                                    @Model.LockoutEnd.Value.ToString("MM/dd/yyyy HH:mm:ss")
                                </span>
                            </dd>
                        }
                    </dl>

                    @* Login History *@
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-clock-history"></i> Login History
                        <small class="text-muted fs-6">(last 10 events)</small>
                    </h5>

                    @if (Model.LoginHistory.Any())
                    {
                        <div class="table-responsive mb-4">
                            <table class="table table-hover table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Timestamp</th>
                                        <th>Event</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model.LoginHistory)
                                    {
                                        <tr class="@(log.Action == "Login Failed" ? "table-warning" : log.Action == "Account Locked Out" ? "table-danger" : "")">
                                            <td>
                                                <small>@log.Timestamp.ToString("MM/dd/yyyy HH:mm:ss")</small>
                                            </td>
                                            <td>
                                                @switch (log.Action)
                                                {
                                                    case "Login Successful":
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle"></i> @log.Action
                                                        </span>
                                                        break;
                                                    case "Login Failed":
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-x-circle"></i> @log.Action
                                                        </span>
                                                        break;
                                                    case "Account Locked Out":
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-lock"></i> @log.Action
                                                        </span>
                                                        break;
                                                    case "Login Failed Reset":
                                                        <span class="badge bg-info">
                                                            <i class="bi bi-arrow-counterclockwise"></i> @log.Action
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@log.Action</span>
                                                        break;
                                                }                                                
                                            </td>
                                            <td>
                                                <small class="text-muted">@log.Details</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle"></i>
                            No login history yet. Login events will appear here after your next login attempt.
                        </div>
                    }

                    @* Recent Activity *@
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-activity"></i> Recent Activity
                        <small class="text-muted fs-6">(last 10 actions)</small>
                    </h5>

                    @if (Model.RecentActivity.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Timestamp</th>
                                        <th>Action</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in Model.RecentActivity)
                                    {
                                        <tr>
                                            <td>
                                                <small>@activity.Timestamp.ToString("MM/dd/yyyy HH:mm")</small>
                                            </td>
                                            <td>@activity.Action</td>
                                            <td>
                                                <small class="text-muted">
                                                    @(string.IsNullOrEmpty(activity.Details) ? "-" : activity.Details)
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No recent activity recorded.
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function() { $('.alert').fadeOut('slow'); }, 5000);
    </script>
}

