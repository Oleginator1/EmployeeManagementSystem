@model EmployeeManagementSystem.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-person-circle"></i> My Profile
                    </h3>
                </div>
                <div class="card-body">
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["InfoMessage"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="bi bi-info-circle-fill"></i> @TempData["InfoMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        @* Profile Picture and Quick Actions *@
                        <div class="col-md-3 text-center border-end">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3"
                                 style="width: 120px; height: 120px; font-size: 48px;">
                                @Model.UserName.Substring(0, 1).ToUpper()
                            </div>
                            <h5>@Model.UserName</h5>

                            @if (Model.Roles.Any())
                            {
                                <div class="mb-3">
                                    @foreach (var role in Model.Roles)
                                    {
                                        <span class="badge bg-info me-1">@role</span>
                                    }
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <a asp-action="Edit" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit Profile
                                </a>
                                <a asp-action="ChangePassword" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-key"></i> Change Password
                                </a>
                                <a asp-action="Security" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-shield-check"></i> Security
                                </a>
                                @if (Model.EmployeeId.HasValue)
                                {
                                    <a asp-action="MyEmployee" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-person-badge"></i> My Employee Record
                                    </a>
                                }
                            </div>
                        </div>

                        @* Profile Details *@
                        <div class="col-md-9">
                            
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-person"></i> Account Information
                            </h5>

                            <dl class="row mb-4">
                                <dt class="col-sm-3">User ID:</dt>
                                <dd class="col-sm-9"><code>@Model.UserId</code></dd>

                                <dt class="col-sm-3">Email:</dt>
                                <dd class="col-sm-9">
                                    @Model.Email
                                    @if (Model.EmailConfirmed)
                                    {
                                        <span class="badge bg-success ms-2">
                                            <i class="bi bi-check-circle"></i> Verified
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark ms-2">
                                            <i class="bi bi-exclamation-triangle"></i> Not Verified
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Username:</dt>
                                <dd class="col-sm-9">@Model.UserName</dd>

                                <dt class="col-sm-3">Phone Number:</dt>
                                <dd class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        @Model.PhoneNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Role(s):</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Roles.Any())
                                    {
                                        @string.Join(", ", Model.Roles)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No roles assigned</span>
                                    }
                                </dd>
                            </dl>
                                                        
                            

                            @* Employee Information (if exists) *@
                            @if (Model.EmployeeId.HasValue)
                            {
                                <h5 class="border-bottom pb-2 mb-3">
                                    <i class="bi bi-person-badge"></i> Employee Information
                                </h5>

                                <dl class="row mb-4">
                                    <dt class="col-sm-3">Employee Name:</dt>
                                    <dd class="col-sm-9">
                                        <a asp-action="MyEmployee">@Model.EmployeeName</a>
                                    </dd>

                                    <dt class="col-sm-3">Department:</dt>
                                    <dd class="col-sm-9">@Model.Department</dd>

                                    <dt class="col-sm-3">Job Title:</dt>
                                    <dd class="col-sm-9">@Model.JobTitle</dd>
                                </dl>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
       
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}